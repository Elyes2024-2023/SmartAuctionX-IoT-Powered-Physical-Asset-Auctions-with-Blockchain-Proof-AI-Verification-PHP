{
    "name": "smartauctionx/core",
    "description": "IoT-Powered Physical Asset Auctions with Blockchain Proof + AI Verification",
    "type": "project",
    "require": {
        "php": "^8.1",
        "ext-json": "*",
        "ext-pdo": "*",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.0",
        "guzzlehttp/guzzle": "^7.0",
        "firebase/php-jwt": "^6.0",
        "web3p/web3.php": "^0.1.6",
        "predis/predis": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "SmartAuctionX\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SmartAuctionX\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src tests",
        "cs": "phpcs src tests"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 